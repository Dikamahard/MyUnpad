    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul" />

    <TextView
        android:id="@+id/tv_dipublikasikan"
        android:layout_width="396dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:text="Deskripsi"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_unggahfoto" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_konten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dipublikasikan" />

    <TextView
        android:id="@+id/iv_buatpost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Buat Post"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_unggahfoto"
        android:layout_width="112dp"
        android:layout_height="34dp"
        android:background="#EBEBEB"
        android:text="Unggah Foto"
        android:textSize="10sp"
        app:cornerRadius="50dp"
        app:iconTint="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:rippleColor="#D8D8D8" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="230dp"
        android:layout_height="41dp"
        android:layout_marginTop="48dp"
        android:text="Unggah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_kategori" />

    <RadioGroup
        android:id="@+id/rg_kategori"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/iv_pilihkategori"
        tools:layout_editor_absoluteX="0dp">

        <RadioButton
            android:id="@+id/rb_kampus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:width="120dp"
            android:background="@drawable/button_selector"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="Kampus"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rb_fakultas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:width="120dp"
            android:background="@drawable/button_selector"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="Fakultas"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rb_prodi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:width="120dp"
            android:background="@drawable/button_selector"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="Prodi"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:id="@+id/iv_pilihkategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Pilih Kategori"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_konten" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_profile_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_judul" />
</androidx.constraintlayout.widget.ConstraintLayout>