    <TextView
        android:id="@+id/textKontak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:text="Kontak (opsional)"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/textPengaturan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageButton14"
        app:layout_constraintTop_toBottomOf="@+id/textPengaturan" />

    <TextView
        android:id="@+id/textPreferensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Preferensi Notifikasi"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/et_bio"
        app:layout_constraintTop_toBottomOf="@+id/et_bio" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_kontak"
        android:layout_width="353dp"
        android:layout_height="34dp"
        android:layout_marginEnd="28dp"
        android:background="#EAEAEA"
        android:hint="09123123123"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textKontak"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textKontak"
        app:layout_constraintTop_toBottomOf="@+id/textKontak"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_bio"
        android:layout_width="354dp"
        android:layout_height="32dp"
        android:background="#EAEAEA"
        android:hint="Seorang Mahasiswa Tangguh"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/et_kontak"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textBio"
        app:layout_constraintTop_toBottomOf="@+id/textBio" />

    <TextView
        android:id="@+id/textBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bio (opsional)"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/et_kontak"
        app:layout_constraintTop_toBottomOf="@+id/et_kontak" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="139dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />

    
