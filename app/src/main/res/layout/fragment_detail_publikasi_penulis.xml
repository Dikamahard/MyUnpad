<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.DetailPublikasiPenulisFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profilpenulis2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_profile_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_detailbookmarked" />

        <TextView
            android:id="@+id/tv_penulis2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:letterSpacing="-0.02"
            android:text="nama penulis"
            android:textColor="#343434"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profilpenulis2"
            app:layout_constraintEnd_toStartOf="@+id/btn_bookmark2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tv_dipublikasikan2"
            app:layout_constraintTop_toBottomOf="@+id/tv_dipublikasikan2"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/btn_bookmark2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="56dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/bookmark1"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.04"
            app:layout_constraintStart_toEndOf="@+id/tv_dipublikasikan2"
            app:layout_constraintTop_toBottomOf="@+id/iv_detailbookmarked"
            app:layout_constraintVertical_bias="0.717" />

        <TextView
            android:id="@+id/tv_dipublikasikan2"
            android:layout_width="188dp"
            android:layout_height="19dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/semibold"
            android:letterSpacing="-0.02"
            android:text="Dipublikasikan oleh:"
            android:textColor="#343434"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_profilpenulis2"
            app:layout_constraintTop_toTopOf="@+id/iv_profilpenulis2" />

        <ImageView
            android:id="@+id/iv_detailbookmarked"
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/loginimage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_judulbookmarked" />

        <TextView
            android:id="@+id/tv_judulbookmarked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="96dp"
            android:fontFamily="@font/semibold"
            android:text="Judul Postingan"
            android:textAlignment="textStart"
            android:textColor="#343434"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/bold"
            android:text="Deskripsi"
            android:textColor="#343434"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.073"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_profilpenulis2" />

        <TextView
            android:id="@+id/tv_kontenbookmarked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/light"
            android:text="Konten"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>